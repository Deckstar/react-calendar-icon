{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "jest": true
  },
  "rules": {
    "no-unused-vars": "error",
    "quote-props": "off",
    "semi": "off",
    "single-quote": true
  }
}
